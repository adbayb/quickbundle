{
	"name": "quickbundle",
	"version": "0.4.1",
	"bin": {
		"quickbundle": "bin/index.js"
	},
	"files": [
		"bin"
	],
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/quickbundle.git"
	},
	"license": "MIT",
	"main": "bin/index.js",
	"scripts": {
		"prepublishOnly": "yarn lint",
		"prestart": "yarn build",
		"start": "bin/index.js",
		"clean": "rm -rf bin",
		"build": "tsc && chmod +x bin/index.js",
		"watch": "tsc -w",
		"format": "prettier . --ignore-path .gitignore --write",
		"lint": "eslint . --ignore-path .gitignore --fix",
		"release": "semantic-release"
	},
	"dependencies": {
		"esbuild": "0.13.15",
		"gzip-size": "6.0.0",
		"termost": "0.2.1"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.7.0",
		"@adbayb/prettier-config": "0.7.0",
		"@adbayb/ts-config": "0.7.0",
		"@commitlint/cli": "15.0.0",
		"@commitlint/config-conventional": "15.0.0",
		"@semantic-release/git": "10.0.1",
		"@types/node": "16.11.9",
		"eslint": "7.32.0",
		"husky": "4.3.8",
		"lint-staged": "12.1.2",
		"prettier": "2.4.1",
		"semantic-release": "18.0.0",
		"typescript": "4.5.2"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"yarn lint"
		],
		"**/*.{json,md,mdx,html,css}": [
			"yarn format"
		]
	},
	"release": {
		"branches": [
			"main"
		],
		"ci": false,
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"breaking": true,
							"release": "major"
						},
						{
							"revert": true,
							"release": "patch"
						},
						{
							"type": "feat",
							"release": "minor"
						},
						{
							"type": "fix",
							"release": "patch"
						},
						{
							"type": "perf",
							"release": "patch"
						},
						{
							"type": "refactor",
							"release": "patch"
						},
						{
							"type": "chore",
							"scope": "deps",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
				}
			],
			"@semantic-release/github"
		]
	}
}
