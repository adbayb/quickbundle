{
	"name": "quickbundle",
	"version": "1.2.0",
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/quickbundle.git",
		"directory": "quickbundle"
	},
	"license": "MIT",
	"keywords": [
		"library",
		"bundle",
		"build",
		"compiler",
		"transpiler",
		"module",
		"fast",
		"esbuild",
		"swc",
		"microbundle"
	],
	"bin": {
		"quickbundle": "dist/index.js"
	},
	"files": [
		"dist",
		"config"
	],
	"type": "module",
	"exports": {
		".": {
			"source": "./src/index.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"prepublishOnly": "pnpm build",
		"build": "rollup --config ./config/bundler.ts --configPlugin rollup-plugin-swc3",
		"watch": "rollup --watch --config ./config/bundler.ts --configPlugin rollup-plugin-swc3"
	},
	"dependencies": {
		"termost": "0.14.0",
		"@rollup/plugin-json": "6.1.0",
		"@rollup/plugin-commonjs": "28.0.0",
		"@rollup/plugin-node-resolve": "15.3.0",
		"rollup": "4.22.5",
		"rollup-plugin-dts": "6.1.1",
		"rollup-plugin-node-externals": "7.1.3",
		"rollup-plugin-output-size": "1.4.2",
		"rollup-plugin-swc3": "0.11.2"
	}
}
