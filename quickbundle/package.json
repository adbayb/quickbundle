{
	"name": "quickbundle",
	"version": "2.5.2",
	"description": "The zero-configuration transpiler and bundler for the web",
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/quickbundle.git",
		"directory": "quickbundle"
	},
	"license": "MIT",
	"keywords": [
		"library",
		"bundle",
		"build",
		"compiler",
		"transpiler",
		"module",
		"fast",
		"esbuild",
		"swc",
		"microbundle"
	],
	"bin": {
		"quickbundle": "bin/index.mjs"
	},
	"files": [
		"bin",
		"dist"
	],
	"type": "module",
	"exports": {
		".": {
			"source": "./src/index.ts",
			"default": "./dist/index.mjs"
		}
	},
	"scripts": {
		"prepublishOnly": "pnpm build",
		"build": "rollup --config ./src/bundler/config.ts --configPlugin rollup-plugin-swc3",
		"watch": "rollup --watch --config ./src/bundler/config.ts --configPlugin rollup-plugin-swc3"
	},
	"peerDependencies": {
		"typescript": ">=4.7.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-url": "^8.0.2",
		"@swc/core": "^1.7.40",
		"gzip-size": "^7.0.0",
		"rollup": "^4.24.0",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-node-externals": "^7.1.3",
		"rollup-plugin-swc3": "^0.12.1",
		"termost": "^0.14.0"
	},
	"devDependencies": {
		"@types/node": "20.16.11"
	}
}
